[sub_resource type="GDScript" id=1]
script/source = "extends Node2D

var count = 0.0
var startTime = 0
var seconds = 0
var phase = BEGIN

const MAX_COUNT = 30
const BEGIN = 0
const BREATHING_IN = 1
const BREATHING_OUT = 2
const HOLDING_OUT = 3
const HOLDING_IN = 4

func _ready():
	print(\"Welcome to Atman\")

func _process(delta):
	seconds = OS.get_unix_time() - startTime
	if phase == BREATHING_IN:
		$Count.text = str(count)
	elif phase == BREATHING_OUT:
		$Count.text = str(count)
	elif phase == HOLDING_OUT or phase == HOLDING_IN:
		var minutes = int(seconds / 60)
		if minutes > 1:
			$Count.text = str(minutes)  + \" minutes - \" + str(fmod(seconds, 60)) + \" seconds\"
		elif minutes == 1:
			$Count.text = str(minutes)  + \" minute - \" + str(fmod(seconds, 60)) + \" seconds\"
		else:
			$Count.text = str(seconds) + \" seconds\"

		if seconds > 14 and phase == HOLDING_IN:
			startBreathing()

func _on_Button_pressed():
	if phase == BEGIN:
		startBreathing()

func startBreathing():
	$StartButton.visible = false
	$StopButton.visible = true
	$Animation.visible = true
	phase = BREATHING_OUT
	count = 0
	$AnimationPlayer.play(\"BreathOut\")
	$Message.text = \"Let the animation guide your breath\"

func _on_StopButton_pressed():
	if phase == BREATHING_IN or phase == BREATHING_OUT:
		holdBreath(HOLDING_OUT)
	elif phase == HOLDING_OUT:
		startTime = OS.get_unix_time()
		$Animation.visible = true
		phase = HOLDING_IN
		$AnimationPlayer.play(\"BreathIn\")
		$Message.text = \"Breath in and hold breath for 15 seconds\"
	elif phase == HOLDING_IN:
		startBreathing()

func _on_AnimationPlayer_animation_finished(anim_name):
	if anim_name == \"BreathOut\":
		count = count + 1
		if count > MAX_COUNT or phase == HOLDING_OUT:
			holdBreath(HOLDING_OUT)
		if phase == BREATHING_OUT:
			phase = BREATHING_IN
			$AnimationPlayer.play(\"BreathIn\")
	elif anim_name == \"BreathIn\":
		if phase == BREATHING_IN:
			phase = BREATHING_OUT
			$AnimationPlayer.play(\"BreathOut\")
		
func holdBreath(mode):
	$Animation.visible = false
	$StopButton.visible = true
	$StartButton.visible = false
	startTime = OS.get_unix_time()
	seconds = 0
	$Message.text = \"Breath out and hold your breath as long as you feel good\"
	phase = mode
"

